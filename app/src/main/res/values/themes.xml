<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NetBird" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nb_yellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/nb_gray_dark</item>
        <!-- Customize your theme here. -->

        <!-- Default background color -->
        <item name="android:windowBackground">@color/nb_gray</item>
    </style>

    <style name="Theme.NetBird.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NetBird.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/nb_txt</item>
    </style>

    <style name="Theme.NetBird.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- for peers fragment -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/nb_yellow</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- for MaterialCardView, bottom button -->
    <style name="TopRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>